<Window x:Class="DemoMVVM01.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:DemoMVVM01.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <viewmodel:IntermediarioViewModel x:Key="IntermediarioViewModel"/>
    </Window.Resources>
    <Grid DataContext="{Binding Source={StaticResource IntermediarioViewModel}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Button Content="Obtener Clientes" Margin="10" HorizontalAlignment="Center"
                Command="{Binding UsuarioCommand}"/>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Usuarios}" Margin="10"/>
    </Grid>
</Window>
